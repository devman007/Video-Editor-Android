<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff242728"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_apply_all_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <com.glitchcam.vepromei.edit.background.view.BackgroundBlurView
            android:id="@+id/background_blur_view"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <com.glitchcam.vepromei.edit.background.view.BackgroundStyleView
            android:id="@+id/background_style_view"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <com.glitchcam.vepromei.edit.background.view.MultiColorView
            android:id="@+id/background_color_view"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#19ffffff" />

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/finish" />

</LinearLayout>